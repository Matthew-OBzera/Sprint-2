<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Password digest</th>
      <th>Last login</th>
      <th>Full name</th>
      <th>Screen name</th>
      <th>Icon</th>
      <th>Color</th>
      <th>Email</th>
      <th>Description</th>
      <th>Powers</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.user_name %></td>
        <td><%= teacher.password_digest %></td>
        <td><%= teacher.last_login %></td>
        <td><%= teacher.full_name %></td>
        <td><%= teacher.screen_name %></td>
        <td><%= teacher.icon %></td>
        <td><%= teacher.color %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.description %></td>
        <td><%= teacher.powers %></td>
        <td><%= teacher.school_id %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

