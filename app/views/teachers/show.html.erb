<div class="page-header cap17-header vertical-align">
	<div class="col-xs-11">
		<h2>Student Roster<small> - students accessible to teacher <%= @teacher.full_name %></small></h2>
	</div>
	<div class="col-xs-1">
		<div class="header-sq i-plum" title=<%= @teacher.screen_name %>>
			<span class="fa fa-apple fa-3x teacher-icon "></span>
		</div>
	</div>
</div>

<!-- Roster Form -->
<h1>Note from Tommy B: if you try to add or remove a student, the teacher's description will be edited - not the roster. I am working on it.</h1>
<%= form_for(@teacher) do |f| %>
<div class="row">
	<div class="col-sm-10 col-sm-offset-1">
		<!--Add/Remove Ctrls -->
		<div class="row form-row vertical-align">
			<div class="form-group col-sm-7">
				<label for="addStud">Add Student to Roster</label>
				<%= f.select :description, options_from_collection_for_select(@all_students_at_school, "id", "full_name"), class: 'form-control', id:"addStud" %>
			</div>
			<div class="col-sm-1">
				<%= f.submit "+", class: "btn btn-success", id: "addStudBtn" %>
			</div>
		</div><!-- End Row -->
		<div class="row form-row">
			<div class="form-group col-sm-7">
				<label for="removeStud">Remove Student from Roster</label>
				<%= f.select :description, options_from_collection_for_select(@students, "id", "full_name"), class: 'form-control', id:"removeStud" %>
			</div>
			<div class="col-sm-1">
				<%= f.submit "-", class: "btn btn-danger", id: "removeStudBtn" %><i class="fa fa-minus icon-white"></i>
			</div>
		</div> <!--End row-->
	</div>
</div><!--End row-->
<% end %> <!-- end of form submission -->

<div class="row">
	<div class="col-sm-10">
		<h3>Current Roster:</h3>
	</div>
</div>

<div id="student-roster" class="pre-scrollable container-fluid"> <!--Student display area -->
	<% @students.each_with_index do |student, index| %>
	<% if index % 6 == 0 %>
	<div class="row students-row">
	<% end %>
	
		<div class="col-xs-2 text-center">
			<div class ="profile-sq i-<%= student.color %> center-block">
				<span class="fa fa-<%= student.icon %> fa-3x student-icon "></span>
			</div>
				<p><span class="student-icon-text"> <%= student.full_name %> </span></p>
		</div> <!-- col -->
	<% if index % 6 == 5 %>
		</div>   <!-- row -->
	<% end %> <!-- end of if index -->
  	<% end %> <!-- end of @students.each_with_index -->
</div> <!--End Student Roster -->