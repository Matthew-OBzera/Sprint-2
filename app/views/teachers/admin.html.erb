<!-- Andy A and UX team  Edited by Robert Herrera -->
<!-- page header -->
	<div class="page-header vertical-align">
			<div class="col-xs-11">
				<h2>Admin Dashboard<small> -  manage school teachers, students, squares, etc</small></h2><!-- Dynamically fills in with school id -->
			</div>
			<div class="col-xs-1 center-block">
				<div class="header-sq i-plum" title="Admin Bianca17">
					<span class="fa fa-apple fa-3x teacher-icon"></span>
				</div>
			</div>
		</div>
<!--End page header-->
<!-- action icons, first row -->		
<div class="row">

<div class="col-xs-2 col-xs-offset-1 text-center" title="View/edit school attributes">
	<div class ="action-sq i-navy center-block" >
			<span class="fa fa-home fa-4x action-icon" ></span>
	</div>
	<p><span class="student-icon-text">
		<%= link_to 'School Profile', edit_school_path(@current_teacher) %>
	</span></p>
</div> <!-- col -->

<div class="col-xs-2 text-center" title="School stats and more">
	<div class ="action-sq i-pink center-block" >
	<span class="fa fa-file-text-o fa-4x action-icon" ></span>
	</div>
	<p><form action='students/show'><span class="student-icon-text">
		<%= link_to 'Super Report', super_report_path(@current_teacher) %>
	</span></form></p>
</div> <!-- col -->
</div>   <!-- row -->

<!-- action icons, second row -->
<div class="row action-icon-row">
<div class="col-xs-2 col-xs-offset-1 text-center" title="View/edit all students">
	<div class ="action-sq i-red center-block" >
		<span class="fa fa-child fa-4x action-icon" ></span>
	</div>
	<p><span class="student-icon-text">
		<%= link_to 'All Students', students_path(@current_teacher) %>
	</span></p>
</div> <!-- col -->

<div class="col-xs-2 text-center" title="View/edit all teachers">
	<div class ="action-sq i-yellow center-block" >
		<span class="fa fa-apple fa-4x action-icon" ></span>
	</div>
	<p><span class="student-icon-text">
		<%= link_to 'All Teachers', teachers_path(@current_teacher) %>
	</span></p>
</div> <!-- col -->

<div class="col-xs-2 text-center" title="View/edit all behavior squares">
	<div class ="action-sq i-ltblue center-block" >
		<span class="fa fa-square-o fa-4x action-icon" ></span>
	</div>
	<p><span class="student-icon-text">
		<%= link_to 'All Squares', roster_squares_path(@current_teacher) %>
	</span></p>
</div> <!-- col -->



