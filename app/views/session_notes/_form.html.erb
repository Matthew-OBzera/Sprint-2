<%= form_for(session_note) do |f| %>
  <% if session_note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(session_note.errors.count, "error") %> prohibited this session_note from being saved:</h2>

      <ul>
      <% session_note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!-- Note content -->
  <div class="row form-row">
    <div class="col-xs-2 col-xs-offset-1"><h4> Note: </h4></div>
    <div class="col-xs-2">
      <%= f.text_area :note, class: "form-control" %>	
    </div>
  </div>

<!-- Displays Save and Cancel buttons -->
  <div class="row action-buttons-row">
	  <div class="col-xs-6 col-xs-offset-1 text-center"> 
      <%= button_tag(type: 'submit', class: "btn btn-success") do %>Save Changes<%end%>
      		&nbsp; &nbsp; &nbsp;
      <%= link_to 'Cancel', students_path, class: "btn btn-danger" %> 
    </div>
  </div>
<% end %>