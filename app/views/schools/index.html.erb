<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Screen name</th>
      <th>Icon</th>
      <th>Color</th>
      <th>Email</th>
      <th>Website</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.full_name %></td>
        <td><%= school.screen_name %></td>
        <td><%= school.icon %></td>
        <td><%= school.color %></td>
        <td><%= school.email %></td>
        <td><%= school.website %></td>
        <td><%= school.description %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

