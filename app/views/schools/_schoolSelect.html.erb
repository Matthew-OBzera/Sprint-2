<!-- dont use form partial unless submit button is styled. -->
<%= form_for(@current_teacher, :url => {:action => "updateFocus"}) do |f| %>


		<div class="row vertical-align">
			<div class="form-group">
				<label class="control-label col-xs-5" for="selectSch">Super focus school:</label>
					<div class="col-xs-7">
						<select class="form-control" id="selectSch">
                           	<% @schools.each do |school| %>
                           	<option value="<%= school.id %>"><%= school.full_name %></option>
                           	 <% end %>
                        </select> 
					</div>   <!-- col-->
					  <div class="row action-buttons-row">
	  						<div class="col-xs-6 col-xs-offset-1 text-center"> 
       						 <%= f.submit "Submit", class: "btn btn-success"%>
  			  			</div>
 						 </div>
  
	  		</div>   <!-- form group-->
		</div>   <!-- row -->
<% end %>

