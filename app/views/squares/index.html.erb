<!--Ricky Perez & Michael Loptien-->

<p id="notice"><%= notice %></p>

<!-- page header -->
<div class="page-header vertical-align">

  <!-- Dynamically fills in with school full name -->
  <div class="col-xs-11">
	  <h2>All Squares<small> - manage behavior squares at  <%= @full_name %></small></h2>
	</div>
	
	<!-- Dynamically fills in with school color, icon, and title of school -->
	<div class="col-xs-1 center-block">
		<div class="header-sq i-<%= @color %>" title="<%= @full_name%>">
					<span class="fa fa-<%= @icon %> fa-3x teacher-icon"></span>
		</div>
	</div>
</div>
<!--End page header-->

<br>

<!-- New Square Button -->
		<div class="row first-content-row">
			<div class="col-xs-3 col-xs-offset-1">
				<form  action="/squares/new.html">
					<button type="submit" class="col-sm-offset-1 btn btn-lg btn-success">
						<span class="fa fa-plus-square-o"></span> New Square
					</button>
				</form>
			</div>   <!-- col -->
		</div>   <!-- row -->

<!-- Squares Table Header-->
<table class= "table table-striped table-hover table-responsive schools-table">
  <thead>
	  <tr>
			<th>Icon</th>
		  <th>ID</th>
			<th>Type</th>
			<th>Description</th>
		</tr>
	</thead>

<!-- Squares Table Body -->
  <tbody>
    <% @squares.each do |square| %>
    <!--SOURCE for data-link: http://stackoverflow.com/questions/9945620/making-a-table-row-into-a-link-in-rails-->
      <tr data-link="<%= edit_square_path(square) %>">
        
        <!-- Square Color -->
        <td>
          <div class="table-sq i-<%= square.color %>">
				    <i class="fa fa-square-o fa-2x table-icon"></i>
				  </div>
				</td>
        <td><%= square.screen_name %></td>
        
        <!-- If statement for translating  square type int into string -->
        <td><% if square.tracking_type == 1 %>
              <p class="listText">Duration</p>
            <% elsif square.tracking_type == 2 %>
              <p class="listText">Frequency</p>
            <% else %>
              <p class="listText">Interval</p>
            <% end %>
        </td>
        
        <!-- Square Description -->
        <td><%= square.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
