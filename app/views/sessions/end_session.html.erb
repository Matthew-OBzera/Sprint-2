<div class="container-fluid">
   <div class="col-xs-10 col-xs-offset-1 col-sm-12 col-sm-offset-0 content-col">
      <div class="page-header vertical-align">
         <div class="col-xs-11">
            <h2>End of Behavior Session with <%= @student.full_name %> </h2>
            <!-- Dynamically fills in with user's name -->
         </div>
         <div class="col-xs-1">
            <div class ="header-sq i-<%= @student.color %>">
               <span class="fa fa-<%= @student.icon %>  fa-2x student-icon "></span>
            </div>
         </div>
      </div>
      <!--End page header-->
      <div class="row">
         <div class="col-xs-10 col-xs-offset-1">
           <h4>Session Duration: <%= calculateDuration(@session) =%></h4>
            <br>
            <h4>Quick Summary:</h4>
            <table class="table table-striped table-hover table-responsive">
               <thead>
                  <tr>
                     <th>Behavior</th>
                     <th>Type</th>
                     <th>Data</th>
                  </tr>
               </thead>
               <tbody>
                  <!--Print students square names in the table -->
                  <% @squares.each do |square| %>
                  <tr>
                     <td>
                        <p class="listText"><%=square.screen_name %></p>
                     </td>
                     <td>
                        <% if square.tracking_type == 2 %> <!-- Frequency -->
                           <label>Frequency</label>
                        <% end %>
                        <% if square.tracking_type == 3 %> <!--Interval -->
                           <label>Interval</label>
                        <% end %>
                        <% if square.tracking_type == 1 %> <!-- Duration-->
                           <label>Duration</label>
                        <% end %>
                     </td>
                  </tr>
                  <% end%>
               </tbody>
            </table>
         </div>
      </div>
      <div class="row">
         <div class="col-xs-2">
            <a href="/home" class="btn btn-lg btn-primary">Home</a>
            </div>
            <div style="float:left; width:auto;">
            <%= button_to 'Print Report', {:controller => "reports", :action => "report1", 
             :id=> @session.id} , {:method=>:post, class: "btn btn-lg btn-success btnFix"}  %>
             </div>
      </div>
   </div>
   <!--End Col -->
</div>
<!-- End container -->