<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Screen name</th>
      <th>Icon</th>
      <th>Color</th>
      <th>Contact info</th>
      <th>Description</th>
      <th>Session interval</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.full_name %></td>
        <td><%= student.screen_name %></td>
        <td><%= student.icon %></td>
        <td><%= student.color %></td>
        <td><%= student.contact_info %></td>
        <td><%= student.description %></td>
        <td><%= student.session_interval %></td>
        <td><%= student.school_id %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

