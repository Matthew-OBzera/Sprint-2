<!--Ricky Perez & Michael Loptien-->

<p id="notice"><%= notice %></p>

<!-- Page Header -->
<div class="page-header vertical-align">
  
  <!-- Dynamically fills in with school full name -->
	<div class="col-xs-11">
	    <h2>All Students<small> - manage students at school <%= @full_name %></small></h2>
	</div>
	
	<!-- Dynamically fills in with school color, icon, and title of school -->
	<div class="col-xs-1 center-block">
		<div class="header-sq i-<%= @color %>" title="<%= @full_name%>">
					<span class="fa fa-<%= @icon %> fa-3x teacher-icon"></span>
		</div>
	</div>
</div>
<!--End page header-->

<br>

<!-- New Student Button -->
<div class="row">
	<div class="col-xs-3 col-xs-offset-1">
		<form  action="/students/new.html">
			<button type="submit" class="col-sm-offset-1 btn btn-lg btn-success">
			  <i class="fa fa-plus-square-o"></i> New Student
			</button>
		</form>
  </div>   <!-- col -->
</div>    <!-- row -->
<!--Table Header -->
<br>
<table class="table table-striped table-hover table-responsive schools-table">
  <!-- Table Header -->
  <thead>
    <tr>
      <th></th> <!-- blank for student icon -->
      <th>ID</th>
      <th>Name</th>
      <th>Last Session</th>
    </tr>
  </thead>
  
  <!-- Table Body -->
  <tbody>
    <% @students.each do |student| %>
      <!--SOURCE for data-link: http://stackoverflow.com/questions/9945620/making-a-table-row-into-a-link-in-rails-->
      <tr data-link = "<%= edit_student_path(student) %>">
        <td>
          <div class="table-sq i-<%= student.color %>">                 <!--Generate Student Color-->
					  <i class="fa fa-<%= student.icon %> fa-2x table-icon"></i>  <!--Generate Student Icon-->
				  </div>
        </td>
        <td><%= student.screen_name %></td>
        <td><%= student.full_name %></td>
        <% this_session =  @sessions.where(session_student: student.id).last %>
        <% if this_session != nil %>
          <td><%= this_session.end_time %></td>                      <!-- Need to link to last Student Session -->
        <% else %>
          <td>no previous sessions</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
